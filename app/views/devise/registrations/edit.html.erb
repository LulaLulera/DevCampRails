<div class="card text-center">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <h2>Editar Usuario</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label "Correo electrónico" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Nombre" %><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Apellidos" %><br />
            <%= f.text_field :surname, class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="form-group">
            <%= f.label "Nueva Contraseña" %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "Confirme nueva contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label "Contraseña actual" %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Actualizar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <h3>Cancelar mi cuenta</h3>
        <%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "¿Está seguro?" }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
    <div class="auth-links">
      <%= link_to "Volver", :back %>
    </div>
  </div>
</div>




