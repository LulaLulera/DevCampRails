<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator error %>
    <% end %>
  <% end %>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
      </div>

      <div class="form-group">
        <label class="btn btn-primary m-2">
          Subir imagen principal <%= f.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group">
        <label class="btn btn-primary m-2">
          Subir imagen secundaria <%= f.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 13 %>
      </div>
    </div>
  </div>

  <hr>

  <div class="col-md-12">
    <h2>Tecnolog√≠as utilizadas</h2>
    <div>
      <%= f.fields_for :technologies do |tech_form| %> <!--ESta parte de technologies se implementa desde el controlador-->
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= tech_form.label :name %>
            <%= tech_form.text_field :name %>
          </li>
        </ul>
      <% end %>

      <div>
        <%#= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit 'Guardar', class: 'btn btn-primary btn-block m-2' %>
    </div>
  </div>
<% end %>